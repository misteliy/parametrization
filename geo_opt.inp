@set COORD_FILE_NAME WATER27structures/H2O.xyz
@set LSD 0
@set CHARGE 0
@set EPS_SCF 1.0E-03
&FORCE_EVAL
  &DFT
    CHARGE ${CHARGE}
    &QS
      METHOD SCPTB
      &SCPTB
        DISPERSION .TRUE.
        DISPERSION_PARAMETER_FILE dftd3.dat
        DO_EWALD .FALSE.
        DO_SCP .FALSE.
        PARAMETER_FILE_NAME para.xml 
        STO_NG 6
      &END SCPTB
    &END QS
    &SCF
      SCF_GUESS ATOMIC
      MAX_SCF 30
      &OT
	  	MINIMIZER CG   
		PRECONDITIONER FULL_ALL
      &END OT
	  &OUTER_SCF
	    EPS_SCF ${EPS_SCF}
	    MAX_SCF 20
	  &END
    &END SCF
  &END DFT
  &SUBSYS
    &CELL
      ABC 30.0 30.0 30.0
      PERIODIC NONE
    &END CELL
    &TOPOLOGY
        COORD_FILE_NAME ${COORD_FILE_NAME}
        COORD_FILE_FORMAT XYZ
    &END
  &END SUBSYS

&END FORCE_EVAL
&GLOBAL
  PROJECT ${COORD_FILE_NAME}
  RUN_TYPE GEO_OPT
  PRINT_LEVEL LOW   
&END GLOBAL
&MOTION
    &GEO_OPT
#        MAX_DR 1.0E-02
#        MAX_FORCE 1.0E-03
#        MAX_ITER 50 
#        RMS_DR 1.0E-02
#        RMS_FORCE 1.0E-03 
    &END GEO_OPT
&END MOTION
